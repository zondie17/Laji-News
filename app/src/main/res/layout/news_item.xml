<?xml version="1.0" encoding="utf-8"?><!--News item layout-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/paddingLR"
        android:paddingTop="13dp"
        android:paddingEnd="@dimen/paddingLR"
        android:paddingBottom="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/itemImage"
                android:letterSpacing="0.02"
                android:lineSpacingMultiplier="1.1"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="120dp"
                android:layout_height="67.5dp"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/paddingLR"
                android:paddingEnd="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/itemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/itemTime"
                android:textColor="@color/grey"
                android:textSize="@dimen/itemSubtitleTextSize" />

            <TextView
                android:id="@+id/itemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/itemSubtitleTextSize" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>